        <!-- Заголовок -->
        <div class="header">
            <h1>Изменения в системе</h1>
        </div>

        <!-- Поля ввода -->
        <div class="updates-section">
            <div>
                <label for="version"> Введите версию:</label>
                <input type="text" id="version" @bind="changes_In_The_System.Action_Type" placeholder="Введите номер версии">
            </div>
            <div>
                <label for="update-text">Введите текст обновления:</label>
                <textarea id="update-text" @bind="changes_In_The_System.Text_update"  placeholder="Введите описание обновления"></textarea>
            </div>
        </div>

        <!-- Кнопки -->
        <div class="buttons-container">
            <button class="cancel-button" @onclick="Calback">Отмена</button>
            <button class="save-button" @onclick="Create">Сохранить</button>
        </div>
    </main>
</div>

<!-- JS для автоматического расширения текстового поля -->
<script>
    const textarea = document.getElementById('update-text');

    textarea.addEventListener('input', function () {
        textarea.style.height = '120px'; // Сбрасываем высоту
        textarea.style.height = `${textarea.scrollHeight}px`; // Устанавливаем новую высоту
    });
</script>
