<div class="container">
    <Sidebar roles="roles" />
    <!-- Основной контент -->
    <main class="content">
        <!-- Информация о пользователе -->
        <div class="user-info">
            <span class="user-name">Имя</span>
            <div class="user-avatar"></div>
        </div>
        <!-- Боковое меню -->
    @*     <aside class="sidebar">
